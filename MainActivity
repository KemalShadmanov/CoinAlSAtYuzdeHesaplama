import android.annotation.SuppressLint;
import android.os.Bundle;
import android.support.v7.app.AppCompatActivity;
import android.text.Editable;
import android.text.TextWatcher;
import android.widget.EditText;
import android.widget.TextView;



public class MainActivity extends AppCompatActivity {

    EditText etAlis, etKomisyon;

    TextView tvYuzdeUc, tvYuzdeBes, tvYuzdeSekiz, tvYuzdeOn, tvYuzdeOnBes,
            tvYuzdeYirmi, tvYuzdeOtuz, tvYuzdeKirk, tvYuzdeElli, tvYuzdeYuz;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);

        etAlis       = findViewById(R.id.etAlis);
        etKomisyon   = findViewById(R.id.etKomisyon);

        tvYuzdeUc    = findViewById(R.id.tvYuzdeUc);
        tvYuzdeBes   = findViewById(R.id.tvYuzdeBes);
        tvYuzdeSekiz = findViewById(R.id.tvYuzdeSekiz);
        tvYuzdeOn    = findViewById(R.id.tvYuzdeOn);
        tvYuzdeOnBes = findViewById(R.id.tvYuzdeOnBes);
        tvYuzdeYirmi = findViewById(R.id.tvYuzdeYirmi);
        tvYuzdeOtuz  = findViewById(R.id.tvYuzdeOtuz);
        tvYuzdeKirk  = findViewById(R.id.tvYuzdeKirk);
        tvYuzdeElli  = findViewById(R.id.tvYuzdeElli);
        tvYuzdeYuz   = findViewById(R.id.tvYuzdeYuz);


        etAlis.addTextChangedListener(new TextWatcher() {
            @Override
            public void beforeTextChanged(CharSequence charSequence, int i, int i1, int i2) {
            }

            @SuppressLint("SetTextI18n")
            @Override
            public void onTextChanged(CharSequence charSequence, int i, int i1, int i2) {

                    double alis = Double.parseDouble(etAlis.getText().toString());
                    double komisiyon = Double.parseDouble(etKomisyon.getText().toString());

                    double yuzdeUc = alis        * komisiyon * 1.03;
                    tvYuzdeUc.setText("%3:  "    + yuzdeUc);

                    double yuzdeBes = alis       * komisiyon * 1.05;
                    tvYuzdeBes.setText("%5:  "   + yuzdeBes);

                    double yuzdeSekiz = alis     * komisiyon * 1.08;
                    tvYuzdeSekiz.setText("%8:  " + yuzdeSekiz);

                    double yuzdeOn = alis        * komisiyon * 1.10;
                    tvYuzdeOn.setText("%10:  "   + yuzdeOn);

                    double yuzdeOnBes = alis      * komisiyon * 1.15;
                    tvYuzdeOnBes.setText("%15:  " + yuzdeOnBes);

                    double yuzdeYirmi = alis      * komisiyon * 1.20;
                    tvYuzdeYirmi.setText("%20:  " + yuzdeYirmi);

                    double yuzdeOtuz = alis       * komisiyon * 1.30;
                    tvYuzdeOtuz.setText("%30:  "  + yuzdeOtuz);

                    double yuzdeKirk = alis       * komisiyon * 1.40;
                    tvYuzdeKirk.setText("%40:  "  + yuzdeKirk);

                    double yuzdeElli = alis       * komisiyon * 1.50;
                    tvYuzdeElli.setText("%50:  "  + yuzdeElli);

                    double yuzdeYuz = alis        * komisiyon * 2;
                    tvYuzdeYuz.setText("%100:  "  + yuzdeYuz);
            }

            @Override
            public void afterTextChanged(Editable editable) {

            }
        });

        etKomisyon.addTextChangedListener(new TextWatcher() {
            @Override
            public void beforeTextChanged(CharSequence charSequence, int i, int i1, int i2) {
            }

            @SuppressLint("SetTextI18n")
            @Override
            public void onTextChanged(CharSequence charSequence, int i, int i1, int i2) {

                double alis = Double.parseDouble(etAlis.getText().toString());
                double komisiyon = Double.parseDouble(etKomisyon.getText().toString());

                double yuzdeUc = alis         * komisiyon * 1.03;
                tvYuzdeUc.setText("%3:  "     + yuzdeUc);

                double yuzdeBes = alis        * komisiyon * 1.05;
                tvYuzdeBes.setText("%5:  "    + yuzdeBes);

                double yuzdeSekiz = alis      * komisiyon * 1.08;
                tvYuzdeSekiz.setText("%8:  "  + yuzdeSekiz);

                double yuzdeOn = alis         * komisiyon * 1.10;
                tvYuzdeOn.setText("%10:  "    + yuzdeOn);

                double yuzdeOnBes = alis      * komisiyon * 1.15;
                tvYuzdeOnBes.setText("%15:  " + yuzdeOnBes);

                double yuzdeYirmi = alis      * komisiyon * 1.20;
                tvYuzdeYirmi.setText("%20:  " + yuzdeYirmi);

                double yuzdeOtuz = alis       * komisiyon * 1.30;
                tvYuzdeOtuz.setText("%30:  "  + yuzdeOtuz);

                double yuzdeKirk = alis       * komisiyon * 1.40;
                tvYuzdeKirk.setText("%40:  "  + yuzdeKirk);

                double yuzdeElli = alis       * komisiyon * 1.50;
                tvYuzdeElli.setText("%50:  "  + yuzdeElli);

                double yuzdeYuz = alis        * komisiyon * 2;
                tvYuzdeYuz.setText("%100:  "  + yuzdeYuz);
            }

            @Override
            public void afterTextChanged(Editable editable) {

            }
        });


    }
}
